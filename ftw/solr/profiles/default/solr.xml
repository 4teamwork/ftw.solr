<?xml version="1.0"?>
<object name="solr">
    <settings>
        <connection>
            <active value="True" />
        </connection>
        <search-pattern
            value="+(Title:{value}^5 OR Description:{value}^2 OR SearchableText:{value} OR SearchableText:{value_lwc} OR SearchableText:{value_twc} OR searchwords:{value}^1000) +showinsearch:True" />
            <commit-within value="10000"/>
            <required-query-parameters>
                <parameter name="SearchableText" />
                <parameter name="qt" />
            </required-query-parameters>
            <search-facets>
                <parameter name="portal_type"/>
                <parameter name="site_section"/>
            </search-facets>
        </settings>
</object>
