<registry>
    <records prefix="plone.bundles/ftw-solr-resources"
             interface="Products.CMFPlone.interfaces.IBundleRegistry">
        <value key="resources" purge="True"></value>
        <value key="enabled">True</value>
        <value key="depends">plone-legacy</value>
        <value key="compile">False</value>
        <value key="jscompilation">++resource++ftw.solr/solr-compiled.js</value>
        <value key="csscompilation">++resource++ftw.solr/solr-compiled.css</value>
        <value key="merge_with">default</value>
    </records>

    <records interface="collective.solr.interfaces.ISolrSchema"
           prefix="collective.solr">
        <value key="active">True</value>
        <value key="host">127.0.0.1</value>
        <value key="port">8983</value>
        <value key="base">/solr</value>
        <value key="index_timeout">0.0</value>
        <value key="search_timeout">0.0</value>
        <value key="max_results">10000000</value>
        <value key="exclude_user">False</value>
        <value key="search_pattern">+(Title:{value}^5 OR Description:{value}^2 OR SearchableText:{value} OR SearchableText:{value_lwc} OR SearchableText:{value_twc} OR searchwords:{value}^1000) +showinsearch:True</value>
        <value key="required">
            <element>SearchableText</element>
            <element>qt</element>
        </value>
        <value key="facets">
            <element>portal_type</element>
            <element>review_state</element>
        </value>
        <value key="filter_queries">
            <element>portal_type</element>
            <element>site_section</element>
        </value>
        <value key="boost_script"></value>
    </records>

</registry>
