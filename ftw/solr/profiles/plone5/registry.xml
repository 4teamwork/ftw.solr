<registry>

    <records prefix="plone.resources/ftwsolr_liveserch"
             interface="Products.CMFPlone.interfaces.IResourceRegistry">
        <value key="js">++resource++ftw.solr/livesearch.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.resources/ftwsolr_facets"
             interface="Products.CMFPlone.interfaces.IResourceRegistry">
        <value key="js">++resource++ftw.solr/facets.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.bundles/ftw-solr-resources"
             interface="Products.CMFPlone.interfaces.IBundleRegistry">
        <value key="resources">
            <element>ftwsolr_liveserch</element>
            <element>ftwsolr_facets</element>
        </value>
        <value key="enabled">True</value>
        <value key="depends">plone-legacy</value>
        <value key="compile">False</value>
        <value key="jscompilation">++plone++ftwsolr/ftw-solr-compiled.js</value>
        <value key="merge_with">default</value>
    </records>

</registry>
